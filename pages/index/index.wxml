<van-cell-group>
    <van-search value="{{ value }}" placeholder="请输入搜索关键词" use-action-slot bind:search="onSearch">
        <view slot="action" bind:tap="onSearch">搜索</view>
    </van-search>
    <block wx:for="{{menuList}}" class="info_block">
        <van-card price="上次烹饪时间：{{item.recentTime}}" currency="" centered="true"  desc="{{item.detailString}}" title="{{item.name}}" thumb="{{ item. img}}" />
    </block>
</van-cell-group>